<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606d6e"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingTop="80dp">
<LinearLayout
    android:paddingRight="3dp"
    android:paddingBottom="5dp"
    android:layout_width="380dp"
    android:layout_height="150dp"
 android:gravity="center_horizontal"

    >
    <Button
        android:id="@+id/button1"
        android:background="#56d763"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:text="পশু"
        android:textSize="50dp"
        android:textColor="#f211e3"


        />
    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:paddingLeft="10dp"
        android:background="#1189a1"
        android:text="পাখি"
        android:textSize="50dp"
        android:textColor="#d72f0d"
        android:layout_margin="5dp"
        />

</LinearLayout>
    <LinearLayout

        android:layout_width="380dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="#0a0809"
            android:text="ফুল"
            android:textSize="50dp"
            android:textColor="#d72f0d"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:paddingLeft="10dp"
            android:background="#4f1071"
            android:text="ফল"
            android:textSize="50dp"
            android:textColor="#bfb608"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="চলো শিখি আমরা"
        android:textSize="35dp"
        android:layout_margin="40dp"
        android:textColor="#fff0"
        android:textStyle="bold"

        />

</LinearLayout>